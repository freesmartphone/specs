<?xml version="1.0"?>
<node name="/" xmlns:doc="http://www.freedesktop.org/dbus/1.0/doc.dtd" doc:id="freesmartphone-device-idlenotifier-interface">

<doc:doc>
  <doc:summary>freesmartphone.org Idle Notification Interface</doc:summary>
  <doc:version>0.4.2</doc:version>
</doc:doc>

<interface name="org.freesmartphone.Device.IdleNotifier">

  <doc:doc>
    <doc:para>
      The Idle Notification Interface provides information about a device's idleness state.
    </doc:para>
  </doc:doc>

  <method name="GetState">
    <annotation name="org.freedesktop.DBus.GLib.Async" value="fso_device_idlenotifier" />
    <doc:doc>
      <doc:description>Get the current idleness status.</doc:description>
    </doc:doc>
    <arg direction="out" type="s" name="status">
      <doc:doc>
        <doc:summary>
          The idleness status. Expected values are:
          [ul]
            [li]"busy"[/li]
            [li]"idle"[/li]
            [li]"idle_dim"[/li]
            [li]"idle_prelock"[/li]
            [li]"lock"[/li]
            [li]"suspend"[/li]
            [li]"awake"[/li]
          [/ul]
        </doc:summary>
      </doc:doc>
    </arg>
  </method>

  <method name="SetState">
    <annotation name="org.freedesktop.DBus.GLib.Async" value="fso_device_idlenotifier" />
    <doc:doc>
      <doc:description>Forces a new idleness status.</doc:description>
    </doc:doc>
    <arg direction="in" type="s" name="status">
      <doc:doc>
        <doc:summary>
          The idle status. See org.freesmartphone.Device.IdleNotifier.GetState for valid values.
        </doc:summary>
      </doc:doc>
    </arg>
  </method>

  <signal name="State">
    <doc:doc>
      <doc:description>
        Sent, when the idleness status has changed.
      </doc:description>
    </doc:doc>
    <arg type="s" name="status">
      <doc:doc>
        <doc:summary>
          The idle status. See org.freesmartphone.Device.IdleNotifier.GetState for expected values.
        </doc:summary>
      </doc:doc>
    </arg>
  </signal>

</interface>
</node>
