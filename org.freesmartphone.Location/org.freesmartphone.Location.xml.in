<?xml version="1.0"?>
<node name="/" xmlns:fso="http://www.freesmartphone.org/schemas/DBusSpecExtension"
xmlns:doc="http://www.freedesktop.org/dbus/1.0/doc.dtd" doc:id="freesmartphone-location-interface">

<doc:doc>
  <doc:summary>freesmartphone.org Location Interface</doc:summary>
  <doc:version>0.2.0</doc:version>
</doc:doc>

<interface name="org.freesmartphone.Location">

    <doc:doc>
      <doc:para>
        The Location interface allows access to position updates,
        region monitoring, and region alarms.
      </doc:para>
    </doc:doc>

    <method name="GetLocation">
      <annotation name="org.freedesktop.DBus.GLib.Async" value="true"/>
      <doc:doc>
        <doc:description>Get the last location information, if available.</doc:description>
      </doc:doc>
      <arg type="a{sv}" name="location" direction="out">
        <doc:doc>
          <doc:summary>
            The location information. See org.freesmartphone.Location.Location.Update for valid key/value pairs.
          </doc:summary>
        </doc:doc>
      </arg>
      <fso:throws type="org.freesmartphone" />
    </method>

    <signal name="LocationUpdate">
    <doc:doc>
      <doc:description>Sent, when the location has been changed.</doc:description>
    </doc:doc>
    <arg name="location" type="a{sv}">
      <doc:doc>
        <doc:summary>
          The location information. Expected key/value pairs are:
          [ul]
            [li]"longitude": double - longitude in degrees,[/li]
            [li]"latitude": double - latitude in degrees,[/li]
            [li]"altitude": int - height in meters,[/li]
            [li]"speed": uint - speed in meters/second,[/li]
            [li]"course: uint - course value in degrees, starting at due notrh, contiuning clockwise around the compass. Thus, north is 0 degrees, east is 90 degrees, etc.[/li]
            [li]"horizontalAccuracy": uint - radius of uncertainty for the location in meters,[/li]
            [li]"verticalAccuracy": uint - accuracy of altitude in meters,[/li]
            [li]"description": string - textual description of location,[/li]
            [li]"timestamp": int - seconds since epoch indicating when the location has been acquired.[/li]
         [/ul]
        </doc:summary>
      </doc:doc>
    </arg>
    </signal>

</interface>

</node>
